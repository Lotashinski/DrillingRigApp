<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/list_view_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_half_gutter"
    android:padding="@dimen/padding_content">

    <TextView
        android:id="@+id/text_device_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/text_primary"
        android:layout_alignParentTop="true" />


    <TextView
        android:id="@+id/text_device_mac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_secondary"
        android:layout_below="@+id/text_device_title"
        android:layout_alignParentStart="true"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/button_device_connect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        app:srcCompat="@drawable/baseline_bluetooth_black_48"
        android:contentDescription="TODO"
        android:focusable="true" />

</RelativeLayout>