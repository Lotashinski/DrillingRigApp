<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ui_primary_content"
    android:padding="@dimen/padding_gutter">

    <FrameLayout
        android:id="@+id/frame_device"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"

        android:layout_alignParentBottom="true"
        android:layout_marginVertical="@dimen/margin_gutter"
        android:layout_marginStart="@dimen/margin_gutter"

        android:background="@color/black"
        android:minWidth="300dp" />

    <FrameLayout
        android:id="@+id/frame_history"

        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"

        android:layout_alignParentBottom="true"
        android:layout_marginVertical="@dimen/margin_gutter"
        android:layout_marginStart="@dimen/margin_gutter"
        android:layout_toEndOf="@+id/frame_device"
        android:background="@color/red" />

</RelativeLayout>